/* miniprogram/pages/index/index.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 首页布局优化：移除横幅与快捷入口 */

/* 推荐演出区域 */
.recommended-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #FF6B35;
}

.concert-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.concert-item {
  display: flex;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  gap: 20rpx;
}

.concert-poster {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.concert-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.concert-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.concert-date {
  font-size: 24rpx;
  color: #FF6B35;
  margin-bottom: 4rpx;
}

.concert-venue {
  font-size: 24rpx;
  color: #666;
}

/* 用户引导区域 */
.guide-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.guide-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.guide-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.guide-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 32rpx;
  display: block;
}

.guide-btn {
  background-color: #FF6B35;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
}

/* 社区热帖 */
.feed-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.feed-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.post-header .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-header .meta {
  display: flex;
  flex-direction: column;
}

.post-header .name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.post-header .time {
  font-size: 24rpx;
  color: #999;
}

.post-content .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.post-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  margin-top: 16rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.post-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.post-actions .action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.post-actions .icon {
  font-size: 28rpx;
  color: #FF6B35;
}

.post-actions .count {
  font-size: 26rpx;
  color: #666;
}