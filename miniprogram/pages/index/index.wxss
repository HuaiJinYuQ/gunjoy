/**index.wxss**/
.home-container {
  background-color: #F5F5F5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E5E5;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  flex: 1;
  color: #999999;
  font-size: 28rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #FF6B35;
  border-radius: 50%;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  tint-color: #FFFFFF;
}

/* 轮播图 */
.carousel-section {
  padding: 20rpx;
}

.carousel {
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.carousel-item {
  position: relative;
  height: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

.carousel-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
  padding: 30rpx 20rpx 20rpx;
}

.carousel-title {
  display: block;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.carousel-date {
  display: block;
  color: #FFFFFF;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 分类导航 */
.category-nav {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: #FFFFFF;
  margin: 20rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.category-emoji {
  font-size: 40rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333333;
}

/* 演出列表 */
.show-list-section {
  background: #FFFFFF;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.sort-picker {
  display: flex;
  align-items: center;
}

.sort-text {
  font-size: 28rpx;
  color: #666666;
  margin-right: 8rpx;
}

.sort-arrow {
  width: 20rpx;
  height: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #F0F0F0;
  border-top: 4rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #999999;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #999999;
}

/* 演出卡片 */
.show-list {
  padding: 0 20rpx;
}

.show-card {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.show-card:last-child {
  border-bottom: none;
}

.show-poster {
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #F0F0F0;
}

.show-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.show-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.show-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  margin-right: 16rpx;
}

.show-category {
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  background: #FF6B35;
}

.category-text {
  font-size: 20rpx;
  color: #FFFFFF;
}

.show-details {
  margin-bottom: 16rpx;
}

.show-detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666666;
}

.show-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.show-price {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: 600;
}

.show-actions {
  display: flex;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  margin-left: 16rpx;
}

.collect-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 加载更多 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-text {
  font-size: 28rpx;
  color: #FF6B35;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner-small {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #F0F0F0;
  border-top: 3rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

.loading-more-text {
  font-size: 24rpx;
  color: #999999;
}