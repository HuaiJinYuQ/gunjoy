/* miniprogram/pages/profile/profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
  text-align: center;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.user-stats {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-prompt {
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.login-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.login-btn {
  background-color: white;
  color: #FF6B35;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 偏好设置区域 */
.preferences-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

.preference-group {
  margin-bottom: 40rpx;
}

.preference-group:last-child {
  margin-bottom: 0;
}

.preference-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  background-color: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.tag.active {
  background-color: #FF6B35;
  color: white;
  border-color: #FF6B35;
}

/* 菜单区域 */
.menu-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.logout-text {
  color: #ff4444;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
  transform: rotate(-90deg);
}
.top-section { padding: 20rpx; }
.login-tip { background-color: #fff; border-radius: 16rpx; padding: 24rpx; display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.profile-card { background-color: #fff; border-radius: 16rpx; padding: 24rpx; display: flex; align-items: center; }
.profile-card .avatar { border: none; margin-bottom: 0; margin-right: 20rpx; }
.profile-card .nickname { font-weight: 600; margin-bottom: 0; }
.profile-meta { flex: 1; }
.meta-row { display: flex; align-items: center; gap: 12rpx; color: #666; margin-top: 8rpx; }
.meta-item { font-size: 26rpx; }
.meta-sep { color: #ccc; }
.edit-arrow { font-size: 40rpx; color: #ccc; }

.grid-section { margin: 20rpx; background-color: #fff; border-radius: 16rpx; padding: 16rpx; display: grid; grid-template-columns: repeat(2, 1fr); gap: 16rpx; }
.grid-item { background-color: #fafafa; border-radius: 12rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 32rpx 0; }
.grid-icon { font-size: 36rpx; color: #FF6B35; margin-bottom: 12rpx; }
.grid-text { font-size: 28rpx; color: #333; }

.about-section { margin: 20rpx; background-color: #fff; border-radius: 16rpx; padding: 24rpx; text-align: center; color: #666; }
.about-title { font-size: 28rpx; color: #333; display: block; margin-bottom: 8rpx; }
.about-desc { font-size: 24rpx; }