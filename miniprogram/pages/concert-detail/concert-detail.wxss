/* miniprogram/pages/concert-detail/concert-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 海报区域 */
.poster-section {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.concert-poster {
  width: 100%;
  height: 100%;
}

.poster-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.3));
}

.concert-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #FF6B35;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 信息区域 */
.info-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.concert-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  background: none;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.btn-icon {
  font-size: 32rpx;
  color: #666;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.bands-container, .genres-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  flex: 1;
}

.band-tag, .genre-tag {
  background-color: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.price-value {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: 600;
}

/* 描述区域 */
.description-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 评论区 */
.comments-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 100rpx;
}

.comment-input-section {
  margin-bottom: 32rpx;
}

.comment-input-container {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.comment-input {
  flex: 1;
  background-color: #f5f5f5;
  border: 1rpx solid #ddd;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  min-height: 80rpx;
}

.submit-btn {
  background-color: #FF6B35;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.login-prompt text {
  font-size: 28rpx;
  color: #666;
}

.login-btn-small {
  background-color: #FF6B35;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-user {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
}

.like-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
}

.like-icon {
  font-size: 24rpx;
  color: #999;
}

.like-icon.liked {
  color: #FF6B35;
}

.like-count {
  font-size: 24rpx;
  color: #666;
}

.no-comments {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 操作按钮区域 */
.action-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
  position: fixed;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.primary-btn {
  flex: 1;
  background-color: #FF6B35;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.secondary-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}